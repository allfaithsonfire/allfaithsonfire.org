
<% books.forEach(book => { %>
  <div class="book-toggle"><%= book.title %></div>
  <ul class="chapter-list">
    <% chapters.filter(c => c.book_id === book.id).forEach(ch => { %>
      <li><a class="chapter-link" href="/chapter/<%= ch.filename %>"><%= ch.title %></a></li>
    <% }); %>
  </ul>
<% }); %>
<div class="toc-nav">
  <button id="prev-chapter">←</button>
  <button id="next-chapter">→</button>
</div>
